{
  "manifest_version": 3,
  "name": "YouTube Music Player",
  "version": "1.0",
  "description": "A Chrome extension to control YouTube Music playback",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 